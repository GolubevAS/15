<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_start"
    tools:context=".SplashScreenActivity">

    <View
        android:id="@+id/one_line"
        android:layout_width="50dp"
        android:layout_height="504dp"
        android:background="@drawable/ic_line_5"
        app:layout_constraintEnd_toStartOf="@+id/two_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/two_line"
        android:layout_width="50dp"
        android:layout_height="446dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_line_5"
        app:layout_constraintEnd_toStartOf="@+id/three_line"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/three_line"
        android:layout_width="50dp"
        android:layout_height="243dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_line_1"
        app:layout_constraintEnd_toStartOf="@+id/four_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/four_line"
        android:layout_width="50dp"
        android:layout_height="315dp"
        android:background="@drawable/ic_line_2"
        app:layout_constraintEnd_toStartOf="@+id/five_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/five_line"
        android:layout_width="50dp"
        android:layout_height="602dp"
        android:background="@drawable/ic_line_3"
        app:layout_constraintEnd_toStartOf="@+id/six_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/six_line"
        android:layout_width="50dp"
        android:layout_height="414dp"
        android:background="@drawable/ic_line_4"
        app:layout_constraintEnd_toStartOf="@+id/seven_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/seven_line"
        android:layout_width="50dp"
        android:layout_height="504dp"
        android:background="@drawable/ic_line_5"
        app:layout_constraintEnd_toStartOf="@+id/eight_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/eight_line"
        android:layout_width="50dp"
        android:layout_height="306dp"
        android:background="@drawable/ic_line_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
