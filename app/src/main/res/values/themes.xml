<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.15" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0091EA</item>
        <item name="colorPrimaryVariant">#2962FF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFAB00</item>
        <item name="colorSecondaryVariant">#FF6D00</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="n">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/gameBackground</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MainButtonStyle">
        <item name="android:background">@drawable/ic_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="fontFamily">K2D</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/puzzleBlockTextStart</item>
    </style>

    <style name="MainRedButtonStyle">
        <item name="android:background">@drawable/ic_btn_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="fontFamily">K2D</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/puzzleBlockTextStart</item>
    </style>
</resources>